<button onclick="controlPlayback('next')">下一張</button>
<button onclick="controlPlayback('previous')">上一張</button>
 
<script>
function controlPlayback(action) {
    // 這裡需要填入你的 Appspace API 資訊
    const deviceId = '你的設備ID';
    const apiKey = '你的API金鑰';
    
    fetch(`https://你的appspace網址/api/v1/playback/${deviceId}/${action}`, {
        method: 'POST',
        headers: {
            'Authorization': `Bearer ${apiKey}`,
            'Content-Type': 'application/json'
        }
    });
}
</script>
